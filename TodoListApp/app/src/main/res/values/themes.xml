<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme, inheriting from MaterialComponents (which itself extends AppCompat) -->
    <style name="Theme.TodoListApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- your color definitions -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Explicitly disable the action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- any other customizations -->
    </style>

</resources>